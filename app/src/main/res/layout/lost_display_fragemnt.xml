<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LostDisplay">


    <TextView
        android:id="@+id/pointTV_lost"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:text="YOUR POINT IS: 1000"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_lost"
        android:layout_width="match_parent"
        android:layout_height="396dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/game_over_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pointTV_lost" />

    <Button
        android:id="@+id/stopButton_lost"
        android:layout_width="145dp"
        android:layout_height="65dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="112dp"
        android:text="@string/stop"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/playButton_lost"
        android:layout_width="145dp"
        android:layout_height="65dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="112dp"
        android:text="@string/play_again"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/stopButton_lost" />


</androidx.constraintlayout.widget.ConstraintLayout>
